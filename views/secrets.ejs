<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <img src="/images/badge120.png" alt="secrets">    
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <hr>

    <% user_array.forEach(user => { %>
      <p class="secret-text"> <%= user.secret %> </p>
    <% }) %>

    <!-- <p class="secret-text">I tell my every secrets to Rahim, my best friend.</p> -->
    <hr>
        
    <form action="/logout?_method=DELETE" method="POST" class="form-inline">
      <button type="submit" class="btn btn-light btn-lg">Log Out</button>
    </form>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>

  </div>
</div>

<%- include('partials/footer') %>
